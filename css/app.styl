c_normal= #666
c_darker= #333

body
  background: #fff

.row
  max-width: 1200px
  min-width: 320px

h1, h2, h3, h4, h5, h6 , span
  font-family: "Proxima", "Helvetica Neue", "Helvetica", Arial, sans-serif
  font-weight: normal
  
h1, h2, h3, h4, h5, h6,p
  &.centered
    text-align: center

h3
  margin-bottom: 0

h4
  font-size: 2.4rem

h5
  font-size: 1.8rem

h6
  font-size: 1.5rem
  line-height: 1

p
  line-height: 20px
  font-size: 1.3rem

.colorize
  color: c_normal


strong
  font-weight: 600

.button.nice
  background-image: url('images/button-gloss.png?1309531891')

a
  color: c_darker

a:hover
  color: c_normal

.light-weight
  font-weight: 300

.normal-weight
  font-weight: c_normal


